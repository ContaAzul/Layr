<?xml version="1.0"?>
<coffee>

	<bundle url="/javascript/assets/" content-type="text/javascript">
		<rootDirectory>/assets</rootDirectory>
		<targetDirectory>/</targetDirectory>
		<filePattern>.js$</filePattern>
	</bundle>

	<bundle url="/javascript/application/" content-type="text/javascript">
		<rootDirectory>/asserts</rootDirectory>
		<targetDirectory>/</targetDirectory>
		<filePattern>.js$</filePattern>
		<excludedFile>.*assets/.*</excludedFile>
	</bundle>

	<bundle url="/css/" content-type="text/css">
		<rootDirectory>/</rootDirectory>
		<targetDirectory>/</targetDirectory>
		<filePattern>.css$</filePattern>
	</bundle>

</coffee>